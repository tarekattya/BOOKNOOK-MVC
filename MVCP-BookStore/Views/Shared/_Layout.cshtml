<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - The Book Nook</title>
    <script type="importmap"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <link href="~/css/bootstrap.min (2).css" rel="stylesheet"/>
@* 	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
 *@	<link href="~/lib/fontawesome/css/all.css" rel="stylesheet" />
	<link href="~/lib/fontawesome/css/all.min.css" rel="stylesheet" />
	<link href="~/css/mycss.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MVCP_BookStore.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-primary text-white shadow-lg mb-3 py-3" data-bs-theme="dark">
            <div class="container">
                <a class="navbar-brand fw-bold text-white" asp-area="" asp-controller="Store" asp-action="Index">
                    <i class="fa-solid fa-book me-2"></i>BookNook
                </a>
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light fw-semibold" asp-area="" asp-controller="Store" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light fw-semibold" asp-area="" asp-controller="Book" asp-action="Index">Book List</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light fw-semibold" asp-area="" asp-controller="Admin" asp-action="ListAllRoles">Roles</a>
                            </li>
                        }
                    </ul>
                    <a class="nav-link text-white fs-5 me-4" asp-area="" asp-controller="Cart" asp-action="Index">
                        <i class="fa-solid fa-cart-shopping"></i>
                    </a>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>

                

                
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            The Book Nook 2025- <a asp-area="" asp-controller="Store" asp-action="Index">Books</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
