@using Microsoft.AspNetCore.Identity
@using MVCP_BookStore.Models

@inject SignInManager<DefaultUser> SignInManager
@inject UserManager<DefaultUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
    <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
        Hello @(UserManager.GetUserAsync(User).Result?.FirstName ?? "User") @(UserManager.GetUserAsync(User).Result?.LastName ?? "")!
    </a>
</li>

    <li class="nav-item">
            <form id="logoutForm" class="form-inline nav-link text-light fw-semibold" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Account/Login", new { area = "Identity" })">
            <button id="logout" type="submit"  class="nav-link btn btn-link text-dark border-0">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
            <a class="nav-link text-light me-2 ms-2" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
            <a class="nav-link text-light   me-2 ms-2" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
